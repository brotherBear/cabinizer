{
  "compilerOptions": {
    "target": "es5",
    "allowSyntheticDefaultImports": true,
    "module": "es2015",
    "jsx": "react",
    "moduleResolution": "node",
    "lib": [
      "dom",
      "es5",
      "es6"
    ],
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true
  },
  "include": [
    "src/**/*"
  ]
}